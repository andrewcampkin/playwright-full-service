# AWS Configuration
aws_region = "us-east-1"
environment = "dev"
project_name = "playwright-service"

# Domain Configuration (optional)
domain_name = ""
certificate_arn = ""

# Database Configuration
db_instance_class = "db.t3.micro"
db_allocated_storage = 20
db_max_allocated_storage = 100

# ECS Configuration
backend_cpu = 512
backend_memory = 1024
test_runner_cpu = 1024
test_runner_memory = 2048
min_capacity = 1
max_capacity = 10

# Redis Configuration
redis_node_type = "cache.t3.micro"
redis_num_cache_nodes = 1
